@model ItemViewModel

@{
    ViewBag.Title = "Add Item";
}

<form enctype="multipart/form-data" asp-controller="item" asp-action="add" method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Name" class="form-control" placeholder="Name">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Description" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Description" class="form-control" placeholder="Address">
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>

    <div class="col-md-6">
        <div class="form-group">
            <label asp-for="ItemImage" class="control-label"></label>
            <div class="custom-file">
                <input asp-for="ItemImage" class="custom-file-input" id="customFile">
                <label class="custom-file-label" for="customFile">Choose file</label>
            </div>
        </div>
    </div>


    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Create</button>

            <a asp-action="Index" class="btn btn-sm btn-primary rounded-0 text-uppercase">
                <i class="fas fa-fast-backward"></i>
                Back to List
            </a>
        </div>
    </div>

</form>

@section scripts {
    <script>
        // Add the following code if you want the name of the file appear on select
        $(document).ready(function () {
            $('.custom-file-input').on("change", function () {
                var fileName = $(this).val().split("\\").pop();
                $(this).next('.custom-file-label').html(fileName);
            });
        });
    </script>
}
