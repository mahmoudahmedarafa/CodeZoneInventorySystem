@model IEnumerable<Item>


@{
    ViewBag.Title = "Items List";
}

<a asp-controller="item" asp-action="add"
   class="btn btn-primary m-1">Add New Item</a>
<br />
<br />

<div class="card-deck d-flex flex-wrap">
    @foreach (var item in Model)
    {
        var photoPath = $"~/images/{item.Image}";

        <div class="row card col-md-4">
            <div class="card-header">
                <h3>@item.Name</h3>
            </div>
            <img class="card-img-top" src="@photoPath"
                 asp-append-version="true" />

            <h5>@item.Description</h5>

            <div class="card-footer text-center">
                <a asp-controller="item" asp-action="edit" asp-route-id="@item.Id"
                   class="btn btn-primary m-1">Edit</a>
                <a asp-controller="item" asp-action="delete" asp-route-itemid="@item.Id"
                   class="btn btn-primary m-1">Delete</a>
            </div>
        </div>

        <br/>
        <br/>
    }
</div>

