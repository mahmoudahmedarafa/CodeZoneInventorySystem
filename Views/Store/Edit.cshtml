@model Store

@{
    ViewBag.Title = "Edit Store";
    // Get the full path of the existing employee photo for display
    var photoPath = "~/images/store.jpg";
}

<form asp-controller="store" asp-action="edit" method="post" class="mt-3">
    <div asp-validation-summary="All" class="text-danger">
    </div>

    <input hidden asp-for="Id" />

    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Name" class="form-control" placeholder="Name">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Address" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Address" class="form-control" placeholder="Address">
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Update</button>
            <a asp-action="index" asp-controller="store" class="btn btn-primary">Cancel</a>
        </div>
    </div>
</form>